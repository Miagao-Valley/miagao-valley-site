---
import {
	numMembers,
	numProjects,
	numStars,
} from "../content/data/githubStats.js";

import Icon from "./Icon.astro";
---

<section class="box statistics">
	<div class="stack gap-2 lg:gap-4 center">
		<Icon
			icon="trophy"
			color="var(--accent-regular)"
			size="7rem"
			gradient
		/>
		<h2 class="gradient">{numMembers}</h2>
		<p>Members</p>
	</div>
	<div class="stack gap-2 lg:gap-4 center">
		<Icon
			icon="trophy"
			color="var(--accent-regular)"
			size="7rem"
			gradient
		/>
		<h2 class="gradient">{numProjects}</h2>
		<p>Projects</p>
	</div>
	<div class="stack gap-2 lg:gap-4 center">
		<Icon
			icon="trophy"
			color="var(--accent-regular)"
			size="7rem"
			gradient
		/>
		<h2 class="gradient">{numStars}</h2>
		<p>Stars</p>
	</div>
</section>

<style>
	.box {
		border: 1px solid var(--gray-800);
		border-radius: 0.75rem;
		padding: 1.5rem;
		background-color: var(--gray-999_40);
		box-shadow: var(--shadow-sm);
	}

	.statistics {
		display: flex;
		flex-direction: column;
		gap: 3rem;
		text-align: center;
	}

	.gradient {
		background: linear-gradient(
			0deg,
			var(--gradient-stop-1),
			var(--gradient-stop-2),
			var(--gradient-stop-3)
		);
		-webkit-background-clip: text;
		background-clip: text;
		color: transparent;
	}

	.center {
		align-items: center;
		justify-content: center;
	}

	@media (min-width: 50em) {
		.box {
			border-radius: 1.5rem;
			padding: 2.5rem;
		}

		.statistics {
			display: grid;
			grid-template-columns: repeat(3, 1fr);
			gap: 5rem;
		}
	}
</style>
